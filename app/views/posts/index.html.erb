<% content_for(:page_title) { %><%="Blog | #{enki_config[:title]}"%><% } %>
<% content_for(:head)       do %><%= auto_discovery_link_tag(:atom, formatted_posts_path(:tag => @tag, :format => 'atom')) %><% end -%>

<% if @posts.empty? -%>
	<div class="content">
		<p>There are no posts yet.</p>
	</div>
<% else -%>
	<%= render :partial => 'posts/side_bar', :locals => {:post => @post} %>
	<div class="content blogposts">
    <h1 class="pagetitle"><img src="/creations/musings.gif" width="111" height="45" /></h1>
		<% @posts.each do |post| -%>
	  		<%= render :partial => 'post', :locals => {:post => post} %>
			<% end -%>
	</div>
  <% if more_content? -%>
    <div class="related">Looking for more? Head on over to the <%= link_to("archives", archives_path) %>.</div>
  <% end -%>
	<br/><br/>
<% end -%>

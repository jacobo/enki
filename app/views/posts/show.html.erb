<% content_for(:head) do -%>
  <%= javascript_include_tag 'common' %>
  <%= javascript_include_tag 'live-comment-preview' %>
<% end -%>
<% content_for(:page_title) do -%>
<%= post_title(@post) -%>
<% end -%>
<%= render :partial => 'posts/side_bar', :locals => {:post => @post} %>
<div class="content blogposts justonepost">
  <h1 class="pagetitle"><img src="/creations/musings.gif" width="111" height="45" /></h1>
	<%= render :partial => 'posts/post', :locals => {:post => @post} %>
</div>

<br/>
<div class="below_post">
	
	<a name="comments"></a>
	<ul class="commentlist">
	  <% @post.approved_comments.each do |comment| -%>
	  <li<%= cycle ' class="alt"', '' %> id="comment-<%= comment.id %>">
	    <%= render :partial => 'comments/comment', :locals => {:comment => comment} %>
	  </li>
	  <% end -%>
	</ul>
	  <% unless @comment.errors.empty? -%>
	  <div class="errors">
	    <h3>Comment not added!</h3>
	    <ul>
	      <% @comment.errors.sort_by(&:first).each do |error| -%>
	        <li><%= format_comment_error(error) %></li>
	      <% end -%>
	    </ul>
	  </div>
	  <% end -%>
	<% form_for([@post, @comment]) do |form| -%>
	  <div>
	    <p><%= form.text_field 'author' %><label for="comment_author"> <small>Name (required)</small></label></p>
	    <p><%= form.text_area 'body' %></p>

	    <p><%= image_submit_tag "/creations/comment_button.gif", :class => 'submit' %></p>
	  </div>
	<% end -%>
	<br class="clear"/>
	
</div>
